<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    cardview:cardCornerRadius="2dp"
    cardview:cardElevation="5dp"
    cardview:cardUseCompatPadding="true"
    cardview:cardBackgroundColor="#ffe278">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <TextView
            android:text="Prova 2 avaliação"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tituloView"
            android:textSize="24sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="?android:attr/textColorHint" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/cardview_shadow_start_color"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp">

        </FrameLayout>

        <TextView
            android:text="Rede de Computadores II"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/DisciplinaView"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="18sp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <ImageView
                android:layout_height="wrap_content"
                cardview:srcCompat="@android:drawable/ic_menu_today"
                android:id="@+id/imageView"
                android:layout_weight="0"
                android:layout_width="25dp" />

            <TextView
                android:text="02 Fev 2017"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/DataView"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_gravity="center_vertical" />

            <ImageView
                android:layout_height="wrap_content"
                cardview:srcCompat="@android:drawable/ic_menu_recent_history"
                android:id="@+id/imageView2"
                android:layout_gravity="center_vertical"
                android:layout_width="25dp" />

            <TextView
                android:text="09:20 am"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/HoraView"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/cardview_shadow_start_color"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            >

        </FrameLayout>


        <TextView
            android:text="Assuntos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/AssuntoTitle"
            android:layout_marginLeft="5dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <CheckBox
                android:text="Assunto 1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/CheckBox1"
                android:layout_weight="1"
                android:textColor="?android:attr/textColorHint"
                android:textCursorDrawable="?android:attr/textColorHint" />

            <CheckBox
                android:text="assunto 2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox2"
                android:layout_weight="1"
                android:textColor="?android:attr/textColorHint" />

            <CheckBox
                android:text="Assunto 3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox3"
                android:layout_weight="1"
                style="@android:style/Widget.DeviceDefault.Light.CompoundButton.CheckBox"
                android:textColor="?android:attr/textColorHint" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>